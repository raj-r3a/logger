{
  "compilerOptions": {
    "incremental": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {},
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts",
    "src/transports/rotatingFileStream.js"
  ],
  "exclude": ["node_modules", "test", "lib"]
}
